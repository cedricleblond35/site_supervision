    <script>
        $(document).ready(function(){
            $('#{{ form.company.villeCodePostal.vars.id }}').change(function(){
                        $.ajax({
                            url:'{{ path('company_new') }}',
                            type: "POST",
                            dataType: "json",
                            data: {
                                "some_var_name": this.value
                            },
                            async: true,
                            success: function (data)
                            {
                                console.log("value : " +data.output);
                                console.dir(data.output);
                                var addhtml = '<option value=""></option>';
                                $.each(data.output, function(id, ville) {
                                    addhtml += '<option value="' + id +'">' + ville + '</option>' ;
                                });


                                $('#{{ form.company.villesFranceFree.vars.id }}').empty();

                                $('#{{ form.company.villesFranceFree.vars.id }}').append(addhtml);;


                            }
                        });
                        return false;
                    }
            )
        });
    </script>

{% endblock javascripts %}