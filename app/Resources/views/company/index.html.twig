{% extends 'base.html.twig' %}

{% block page_content %}
    <h1>Companies list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomsociete</th>
                <th>Adresse1</th>
                <th>Adresse2</th>
                <th>Codepostal</th>
                <th>Telephonefixe</th>
                <th>Email</th>
                <th>Siret</th>
                <th>Ape</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td><a href="{{ path('company_show', { 'id': company.id }) }}">{{ company.id }}</a></td>
                <td>{{ company.nomSociete }}</td>
                <td>{{ company.adresse1 }}</td>
                <td>{{ company.adresse2 }}</td>
                <td>{{ company.codePostal }}</td>
                <td>{{ company.telephonefixe }}</td>
                <td>{{ company.email }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.ape }}</td>
                <td>{{ company.commentaire }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('company_show', { 'id': company.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('company_edit', { 'id': company.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('company_new') }}">Create a new company</a>
        </li>
    </ul>
{% endblock %}
