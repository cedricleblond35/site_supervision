<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <a href="{{ path('app_dashboard') }}" class="site_title"><i class="fa fa-paw"></i> <span>Gentelella</span></a>
        </div>

        <div class="clearfix"></div>

        <!-- menu profile quick info -->
        <div class="profile">
            <div class="profile_pic">
                <img src="{{ asset('assets/images/img.jpg') }}" alt="..." class="img-circle profile_img">
            </div>
            <div class="profile_info">
                <span>Welcome,</span>
                <h2>{{ app.user.username }}</h2>
            </div>
        </div>
        <!-- /menu profile quick info -->

        <div class="clearfix"></div>

        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
            {% if is_granted('ROLE_SUPERADMIN') %}
                {% include 'menu/super_admin.twig' %}

            {% elseif  is_granted('ROLE_ADMIN_COMPANY_PRINCIPAL') %}
                {% include 'menu/admin_company_principal.twig' %}


            {% elseif  is_granted('ROLE_USER_COMPANY') %}
                {% include 'menu/user_company.html.twig' %}

            {% elseif  is_granted('ROLE_CUSTOMER') %}
                {% include 'menu/customer.html.twig' %}

            {% endif %}


            
        </div>
