{% extends 'base.html.twig' %}

{% block page_content %}
    <h1>Lot</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lot.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ lot.numero }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ lot.libelle }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lot_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lot_edit', { 'id': lot.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
